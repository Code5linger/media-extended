{
  "background": {
    "scripts": ["background/index.ts"],
    "persistent": false
  },
  "content_scripts": [
    {
      "js": ["content/index.ts"],
      "matches": ["https://*/*", "http://*/*"]
    }
  ],
  "browser_action": {
    "default_popup": "pages/popup/index.html"
  },
  "permissions": ["tabs", "*://*/*"]
}
