{
  "extends": "@aidenlx/ts-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@player/*": ["player/*"],
      "@slice/*": ["player/slice/*"],
      "@player": ["player"],
      "@render/*": ["render/*"],
      "@view": ["media-view"],
      "@base/*": ["base/*"],
      "@plugin": ["mx-main"],
      "@settings": ["settings"],
      "@misc": ["misc"]
    },
    "lib": ["dom", "es5", "scripthost", "es2016", "dom.iterable"],
    "jsx": "react",
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
