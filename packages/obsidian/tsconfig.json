{
  "extends": "@aidenlx/ts-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@player/*": ["player/*"],
      "@slice/*": ["player/slice/*"],
      "@player": ["player"],
      "@render/*": ["render/*"],
      "@view": ["media-view"],
      "@base/*": ["base/*"],
      "@plugin": ["mx-main"],
      "@settings": ["settings"],
      "@misc": ["misc"],
      "@hook-utils": ["player/utils/hooks"],
      "@styles/*": ["player/component/styles/*"],
      "@const": ["./const.mjs"],
      "@browser-view": ["player/component/browser-view"],
      "@browser-view/*": ["player/component/browser-view/*"],
    },
    "lib": ["dom", "es5", "scripthost", "es2016", "dom.iterable"],
    "jsx": "react",
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
